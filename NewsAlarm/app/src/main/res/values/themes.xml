<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsAlarm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:timePickerStyle">@style/NewsAlarmTimePickerStyle</item>
    </style>

    <!-- TimePicker style -->
    <style name="NewsAlarmTimePickerStyle"
            parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <!-- WeekDayPicker Style -->
    <style name="WeekdayStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">1dp</item>
        <item name="android:background">#3C2058FF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- common button style for light theme -->
    <style name="buttonTheme">
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <!-- common button style for light theme -->
    <style name="iconButtonTheme">
        <item name="iconTint">@color/black</item>
    </style>

    <!-- scrollView background for light theme -->
    <style name="alarmSetterScrollView">
        <item name="android:background">@drawable/alarm_setting_bg</item>
    </style>
</resources>
